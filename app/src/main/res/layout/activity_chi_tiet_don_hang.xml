<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E8B4B8"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#0A000000"
                    android:layout_height="20dp"/>

                <FrameLayout
                    android:id="@+id/idClickEdit_ThongTin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ nhận hàng"
                            android:textAllCaps="true"
                            android:fontFamily="@font/cabin_medium"
                            android:textSize="18dp"
                            android:textColor="#D8000000" />

                        <TextView
                            android:id="@+id/tvName_HDCT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:fontFamily="@font/cabin"
                            android:text="tên người nhận"/>

                        <TextView
                            android:id="@+id/tvSDT_HDCT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:fontFamily="@font/cabin"
                            android:text="0123456789"/>

                        <TextView
                            android:id="@+id/tvDiaChi_HDCT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:fontFamily="@font/cabin"
                            android:text="Gia Lâm , Hà Nội"/>

                    </LinearLayout>

                    <View
                        android:layout_gravity="bottom"
                        android:id="@+id/idView1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#0A000000"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/hdct_anh_item"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="15dp"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hdct_tensp_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="aaaaaaa"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hdct_gia_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="aaaaaaa"
                            android:textColor="#F44336"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_marginRight="20dp"
                            android:layout_gravity="right"
                            android:paddingRight="25dp"
                            android:paddingLeft="25dp"
                            android:background="@drawable/bg_bogoc_gray"
                            android:id="@+id/tvSoLuong_HDCT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#0A000000"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/idSpinnerTrangThai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái"
                        android:fontFamily="@font/cabin"
                        android:textSize="18dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#0A000000"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Tổng tiền hàng"
                            android:fontFamily="@font/cabin"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/tvTienHang_HDCT"
                            android:textAlignment="textEnd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:fontFamily="@font/noto_sans"
                            android:text="1.000.000 đ"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Phí ship"
                            android:fontFamily="@font/cabin"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/tvPhiShip_HDCT"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:fontFamily="@font/noto_sans"
                            android:text="50.000 đ"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Voucher giảm giá"
                            android:fontFamily="@font/cabin"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/tvVoucher_HDCT"
                            android:textAlignment="textEnd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:fontFamily="@font/noto_sans"
                            android:text="- 100.000 đ"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#0A000000"
                    android:layout_height="20dp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:background="@color/pink"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tổng thanh toán"
                    android:textAllCaps="true"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/tvTongTienThanhToan"
                    android:textAlignment="textEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="950.000 đ"
                    android:textColor="@color/red"
                    android:textSize="18dp" />

            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tvDatHang_HDCT"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/background_dathang"
                android:fontFamily="@font/noto_sans_bold"
                android:gravity="center"
                android:text="Lưu"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>