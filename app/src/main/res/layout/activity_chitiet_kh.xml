<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A000000"
    tools:context=".chitietkhachhang.ChitietKH"
    android:orientation="vertical">
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      app:cardCornerRadius="10dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tenkh"
          android:text="Nguyễn Văn A"
          android:layout_gravity="center"
          android:textSize="25dp"
          android:textStyle="bold"
          android:textColor="#EC8A8A"/>
  </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
          >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+84: "
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="0dp"
                android:textColor="#EC8A8A"
                android:gravity="start"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0374786775"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#EC8A8A"
                android:layout_gravity="center"
                android:id="@+id/txtsdt"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            >
            <TextView
                android:layout_gravity="end|center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#EC8A8A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng số đơn hàng đặt :"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            >
            <TextView
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#EC8A8A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tongdonhang"
                android:text="10000"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#C86FE1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ đặt hàng"
                android:paddingLeft="5dp"
                android:layout_gravity="center"

                />
            <TextView
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#EC8A8A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="48 đường lai xá - kim chung - hoài đúc "
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/black" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        //
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên Sản Phẩm"
                    />
                <View
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        //
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ngày mua"
                    />
                <View
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        //<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái"
                />
            <View
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcvchitiet"/>
</LinearLayout>